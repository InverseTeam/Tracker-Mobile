<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_course_radius"
    android:orientation="vertical"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="8dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/image_example_courses"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-42dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/item_course_radius2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitleItemCourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mont_semibold"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:text="Вязание крючком"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/image_icon_time"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mont_semibold"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/color_main"
                        android:text="Пн, Ср, Пт"
                        android:gravity="left"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textDescriptionItemCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mont_semibold"
                    android:textSize="10sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_text_main"
                    android:text="Один из видов рукоделия, в процессе создаются вязаные изделия"
                    android:gravity="left"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/category_radius">

                <TextView
                    android:id="@+id/textCategoryItemCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mont_semibold"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/color_main"
                    android:text="вязание"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="13dp"
                    android:gravity="left"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>